<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_compnay_form_bill" model="ir.ui.view">
        <field name="name">BILL Company Configuration</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">

            <notebook position="inside">
                <page string="BILL Configuration">
                    <group>
                        <field name="bill_account_name" />
                        <field name="bill_api_token" />
                        <field name="has_bill" groups="base.group_no_one" />
                        <field name="bill_template_id" />
                    </group>
                </page>
            </notebook>

        </field>
    </record>
</odoo>
